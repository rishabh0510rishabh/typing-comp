# ===========================
# Environment Configuration
# ===========================
# Copy this file to .env and update values for your environment
# DO NOT commit the actual .env file to version control

# ===========================
# Server Configuration
# ===========================
# Port on which the server runs
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ===========================
# Database Configuration
# ===========================
# MongoDB connection URI
# Local: mongodb://localhost:27017/typing-platform
# Docker: mongodb://mongo:27017/typing-platform
# Remote: mongodb+srv://username:password@cluster.mongodb.net/typing-platform
MONGODB_URI=mongodb://localhost:27017/typing-platform

# ===========================
# Authentication
# ===========================
# JWT secret key for signing tokens
# Generate a strong random string for production (min 32 characters recommended)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# JWT token expiration time
# Examples: '24h', '7d', '30d'
JWT_EXPIRES_IN=24h

# ===========================
# Logging Configuration
# ===========================
# Log level (error, warn, info, http, debug)
LOG_LEVEL=info
